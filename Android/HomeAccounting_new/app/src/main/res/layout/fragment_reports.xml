<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?android:colorBackground"
    tools:context=".ReportsFragment">
    <GridLayout
        android:id="@+id/boxContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/select_date_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_date_start"
            android:layout_row="0"
            android:layout_column="0"
            />
        <TextView
            android:id="@+id/date_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="01.01.1980"
            android:layout_row="0"
            android:layout_column="1"
            android:textSize="14sp"
            android:textStyle="bold"
            />
        <Button
            android:id="@+id/select_date_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_date_end"
            android:layout_row="0"
            android:layout_column="2"
            />
        <TextView
            android:id="@+id/date_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="01.01.1980"
            android:layout_row="0"
            android:layout_column="3"
            android:textSize="14sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/grouping_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"
            android:text="@string/grouping"
            android:layout_row="1"
            android:layout_column="0"
            />
        <Spinner
            android:id="@+id/grouping"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnSpan="3"
            android:entries="@array/groupByNames"
            />

        <TextView
            android:id="@+id/account_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"
            android:text="@string/account"
            android:layout_row="1"
            android:layout_column="4"
            />
        <Spinner
            android:id="@+id/accounts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_row="1"
            android:layout_column="5"
            />

        <TextView
            android:id="@+id/category_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"
            android:text="@string/category"
            android:layout_row="2"
            android:layout_column="0"
            />
        <Spinner
            android:id="@+id/categories"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnSpan="3"
            />

        <TextView
            android:id="@+id/subcategory_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:gravity="center"
            android:text="@string/subcategory"
            android:layout_row="2"
            android:layout_column="4"
            />
        <Spinner
            android:id="@+id/subcategories"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:layout_row="2"
            android:layout_column="5"
            />

        <Button
            android:id="@+id/generate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_horizontal"
            android:text="@string/generate"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="6"
            />

        <accounting.home.homeaccounting.ReportHeader
            android:id="@+id/header_view"
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="5"
            android:layout_columnSpan="6"
            />

    </GridLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/results_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</LinearLayout>